---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  {% if page.pdf_url %}
    <div class="pdf-container" style="width: 100%; height: 800px; border: 1px solid #ccc; margin-top: 20px;">
      <embed src="{{ page.pdf_url }}" type="application/pdf" width="100%" height="100%">
    </div>
  {% else %}
    <p>No PDF file provided.</p>
  {% endif %}
</div>
